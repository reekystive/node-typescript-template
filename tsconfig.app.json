{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "incremental": true,
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "useUnknownInCatchVariables": true,
    "lib": ["ES2022"],
    "types": ["node"],
    "skipLibCheck": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "declarationMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    // tsBuildInfoFile is generated at outDir/relativePathOfConfigFromRootDir/tsconfigName.tsbuildinfo by default,
    // which is ./src/.. -> project root. explicitly set it to ./dist/tsconfig.app.tsbuildinfo here.
    // https://github.com/microsoft/TypeScript/issues/30925#issuecomment-483371766
    "tsBuildInfoFile": "./dist/tsconfig.app.tsbuildinfo"
  },
  "include": ["src"],
  "exclude": ["**/node_modules/", "**/__tests__/"]
}
